<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>





  <servlet>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <servlet-class>controller.AddEmployeeServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <servlet-class>controller.DeleteEmployeeServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UpdateEmployeeServlet</servlet-name>
    <servlet-class>controller.UpdateEmployeeServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <url-pattern>/addEmployee</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <url-pattern>/DeleteEmployeeServlet</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>UpdateEmployeeServlet</servlet-name>
    <url-pattern>/UpdateEmployeeServlet</url-pattern>
  </servlet-mapping>



  <welcome-file-list>
    <welcome-file>addEmployee</welcome-file>
  </welcome-file-list>


</web-app>

